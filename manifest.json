{
  "manifest_version": 2,

  "name": "Basic Chrome Extension",
  "description": "Learning how to create Chrome extensions.",
  "version": "1.2",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["scripts/content.js"],
    "run_at": "document_end"
  }],
  "permissions": ["activeTab"]
}